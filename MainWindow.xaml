<Window x:Class="RegistroPrestamos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registro de Prestamos " Height="250" Width="350">
    <Grid>
        <Menu IsMainMenu="True" VerticalAlignment="Top">
            <MenuItem Header="_Registro">
                <MenuItem Name="rClientesMenu" Header="Registro de Clientes" Click="rClientesMenu_Click"/>
                <MenuItem Name="rPrestamosMenu" Header="Registro de prestamos" Click="rPrestamosMenu_Click"/>
                <MenuItem Name="rMorasMenu"  Header="Registro de Mora" Click="rMorasMenu_Click"/>
            </MenuItem>

            <MenuItem Header="_Consultar">
                <MenuItem Name="cClientesMenu" Header="Consulta de Clientes" Click="cClientesMenu_Click"/>
                <MenuItem Name="cPrestamosMenu" Header="Consulta de prestamos" Click="cPrestamosMenu_Click"/> 
                <MenuItem Name="cMorasMenu" Header="Consulta de Moras" Click="cMorasMenu_Click"/>
            </MenuItem>

            <MenuItem Name="AyudaMenu" Header="Ayuda" Click="AyudaMenu_Click"/>
        </Menu>












    </Grid>
</Window>
